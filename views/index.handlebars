<h1>Eat a Burger!</h1>

<div class="container">
    <div class="notEaten">
 <h2>Burgers</h2>
  <ul>
        {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{this.burger_name}}
                    <button class="btnDevour" data-id={{this.id}} data-newDevour={{this.devoured}}>
                        Devour it!
                    </button>
                </li>
                {{/unless}}
                {{/each}}

</ul>
     
    </div>
</div>

<div class="devoured">
<h2>Devoured Burgers</h2>
<ul>
        {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{this.burger_name}}
                </li>
                {{/if}}
                {{/each}}
</ul>
</div>
</div>
<h2>Add a Burger</h2>
<form class="create-form">
    <div class="form-group">
        <label for="burgername">Burger Name:</label>
        <input type="text" id="burg" name="name">
    <button type="submit">Add Burger</button>
    </div>
</form>
</main>